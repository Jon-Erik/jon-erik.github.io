json("../style-vars.json")

AntiFlashWhite = antiFlashWhite
RaisinBlack = raisinBlack

.loader-wrapper 
    width 100%
    display flex
    justify-content center
    height 4em

    .loader 
        color RaisinBlack
        position relative
        font-size 11px
        background RaisinBlack
        animation escaleY 1s infinite ease-in-out
        width 1em
        height 4em
        animation-delay -0.16s

    .loader:before, .loader:after 
        content ''
        position: absolute
        top 0
        left 2em
        background RaisinBlack
        width 1em
        height 4em
        animation escaleY 1s infinite ease-in-out

    .loader:before 
        left -2em
        animation-delay -0.32s

    @keyframes escaleY 
        0%, 80%, 100% 
            box-shadow 0 0
            height 4em
        
        40% 
            box-shadow 0 -2em
            height 5em

    @keyframes l1
        0% 
            background-position right

    &.small
        height 23px

        .loader
            animation escaleYsmall 1s infinite ease-in-out
            animation-delay -0.16s
            width 0.5em
            margin 5px 0
            color AntiFlashWhite
            background AntiFlashWhite

        .loader:before, .loader:after
            width 0.5em
            animation escaleYsmall 1s infinite ease-in-out
            left 0.8em
            height 1.5em
            background AntiFlashWhite

        .loader:before
            left -0.8em
            animation-delay -0.32s

    @keyframes escaleYsmall 
        0%, 80%, 100% 
            box-shadow 0 0
            height 1em
        
        40% 
            box-shadow 0 -0.2em
            height 1.5em