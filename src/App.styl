json("./style-vars.json")

ParagraphFont = paragraphFont
TitleFont = titleFont

.grecaptcha-badge
    visibility hidden

.app-wrapper
    display flex 
    flex-direction column
    height 100vh

    h1, h2
        font-family 'Merriweather Sans', sans-serif
        font-size 24px
        text-transform uppercase

    h2
        font-size 21px

    h3, h4
        font-family titleFont

    p, li, strong, i, em, label, input
        font-family paragraphFont

    .page-content
        flex 1
        height calc(100vh - 77px)
        overflow-y auto

        .imported-html
            margin-bottom 30px

            h3
                margin-bottom 0 !important
                margin-top 20px !important

            p, ul
                margin 5px 0

        .links
            display flex 
            flex-wrap wrap