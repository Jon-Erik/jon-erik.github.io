.metronome
    .stop-play
        margin-left 10px
    .rhythm-visualization
        display flex
        text-align center
        flex-wrap wrap
        .main-beat
            margin-bottom 15px
    .rhythm-division
        min-width 25px
        height 20px
        color white
        margin 1px
        position relative
        height 25px
        .beat-label
            line-height 25px
        &.menu-open 
            .beat-label
                background  inherit
                filter brightness(1.5)

        .beat-menu-toggle
            cursor pointer
        .beat-menu
            position absolute
            z-index 99
            visibility hidden
            width 250
            text-align left
            background black
            color white
            padding 5px
            display flex
            justify-content space-between
            .menu-item, .close
                cursor pointer
                &:not(:last-of-type)
                    margin-bottom 5px
            &.menu-open
                visibility visible
            .caret
                position absolute
                top -9px
                left -3px
                color black
    .level-1
        background rgb(255, 94, 94)
    .level-2
        background rgb(105, 105, 255)
    .level-3
        background green
    .level-4
        background purple
    .active
        font-weight bold
        filter brightness(1.5)
    .silent
        background repeating-linear-gradient(
            45deg, 
            #eee, 
            #111 2px, 
            #333 2px, 
            #111 4px
        );
