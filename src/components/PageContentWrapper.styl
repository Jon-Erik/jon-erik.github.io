.page-content-wrapper
    max-width 900px
    margin auto
    margin-bottom 20px
    margin-top 20px

    .children
        height 100%

        &.vertical-center-content
            display flex
            flex-direction column
            justify-content center

    &.loading
        height 100%
        display flex 
        flex-direction column
        justify-content center

        .loader-wrapper
            margin auto