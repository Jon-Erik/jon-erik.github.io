.Chevron
	display inline-block
	font-size 1.2rem
	padding 0.8em
	border 1px solid black
	border-radius 4px
	color $dark-light
	background-color white
	cursor pointer
	&:hover:not(.disabled)
		background-color darkgray
		color $dark
	&:active:not(.disabled)
		color white
		background-color gray
		border-color gray
	&.disabled
		background-color #f8f8f8
		color $text-subtle
@media only screen and (max-width: 420px)
	.Chevron
		padding 10px 7px
