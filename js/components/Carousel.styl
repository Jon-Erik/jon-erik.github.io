.Carousel
	display flex
	padding 0 14px
	position relative
	touch-action none
	.content
		overflow-x hidden
		margin 0 17px
		.children
			display flex !important
		.children > a:not(:last-of-type), .children > div:not(:last-of-type)
			margin-right 16px
	.btns
		position absolute
		top 0
		left 0
		display flex
		justify-content space-between
		width 100%
		height 100%
		pointer-events none
		.scrollBtn
			height 100%
			display flex
			align-items center
			justify-content center
			pointer-events auto

@media only screen and (max-width: 420px)
	.Carousel
		.content
			margin 0 3px
