.metronome
    .rhythm-visualization
        display flex
        text-align center
    .rhythm-division
        min-width 20px
        height fit-content
        position relative
        .beat-menu-toggle
            cursor pointer
        .beat-menu
            position absolute
            z-index 99
            visibility hidden
            width 250
            text-align left
            background black
            color white
            padding 5px
            display flex
            justify-content space-between
            .menu-item, .close
                cursor pointer
                &:not(:last-of-type)
                    margin-bottom 5px
            &.menu-open
                visibility visible
    .level-1
        border 1px solid red
    .level-2
        border 1px solid blue
    .level-3
        border 1px solid green
    .active
        font-weight bold
